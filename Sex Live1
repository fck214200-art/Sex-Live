}
// app.js
let balance = 0;

function addBalance(amount){
  balance += amount;
  console.log("Balance:", balance);
}

function withdraw(){
  if(balance >= 500){
    alert("Withdraw request sent!");
  } else {
    alert("Minimum 500 টাকা লাগবে");
  }

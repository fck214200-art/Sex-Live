// router.js
function loadPage(page){
  fetch(`/pages/${page}.html`)
    .then(r => r.text())
    .then(html => document.getElementById("app").innerHTML = html);
}

const routes = {
  "": "login",
  "login": "login",
  "chat": "chat",
  "wallet": "wallet",
  "withdraw": "withdraw",
  "admin": "admin"
};

const path = location.pathname.replace("/", "");
loadPage(routes[path] || "login");

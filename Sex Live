        function showAdDirect() {
            window.open(adLink, '_blank'); // ‡¶¨‡¶ø‡¶ï‡¶æ‡¶∂ ‡¶®‡¶Æ‡ßç‡¶¨‡¶∞‡ßá ‡¶Ö‡ßç‡¶Ø‡¶æ‡¶°
        }

        function switchTab(tab) {
            if (tab === 'chat') {
                window.open(adLink, '_blank'); // ‡¶Æ‡ßá‡¶∏‡ßá‡¶û‡ßç‡¶ú‡¶æ‡¶∞‡ßá ‡¶¢‡ßÅ‡¶ï‡¶≤‡ßá ‡¶Ö‡ßç‡¶Ø‡¶æ‡¶°
            }
            document.getElementById('chatSection').style.display = (tab === 'chat') ? 'flex' : 'none';
            document.getElementById('walletSection').style.display = (tab === 'wallet') ? 'block' : 'none';
            document.getElementById('chatTab').className = (tab === 'chat') ? 'pb-1 active-tab' : 'pb-1 opacity-60';
            document.getElementById('walletTab').className = (tab === 'wallet') ? 'pb-1 active-tab' : 'pb-1 opacity-60';
        }

        // ‡¶Ö‡¶°‡¶ø‡¶ì ‡¶ì ‡¶≠‡¶ø‡¶°‡¶ø‡¶ì ‡¶ï‡¶≤‡ßá ‡¶Ö‡ßç‡¶Ø‡¶æ‡¶° ‡¶®‡¶ø‡¶∂‡ßç‡¶ö‡¶ø‡¶§ ‡¶ï‡¶∞‡¶æ‡¶∞ ‡¶ú‡¶®‡ßç‡¶Ø ‡¶®‡¶§‡ßÅ‡¶® ‡¶´‡¶æ‡¶Ç‡¶∂‡¶®
        function startCallWithAd(type) {
            window.open(adLink, '_blank'); // ‡¶ï‡¶≤ ‡¶¨‡¶æ‡¶ü‡¶®‡ßá ‡¶ï‡ßç‡¶≤‡¶ø‡¶ï ‡¶ï‡¶∞‡¶≤‡ßá ‡¶Ö‡ßç‡¶Ø‡¶æ‡¶°
            currentCallType = type;
            document.getElementById('callStatus').innerText = (type === 'audio' ? '‡¶Ö‡¶°‡¶ø‡¶ì ‡¶ï‡¶≤ ‡¶ö‡¶≤‡¶õ‡ßá...' : '‡¶≠‡¶ø‡¶°‡¶ø‡¶ì ‡¶ï‡¶≤ ‡¶ö‡¶≤‡¶õ‡ßá...');
            document.getElementById('callUI').classList.remove('hidden');
            sec = 0;
            timerInt = setInterval(() => {
                sec++;
                let m = Math.floor(sec / 60);
                let s = sec % 60;
                document.getElementById('timer').innerText = (m < 10 ? "0" + m : m) + ":" + (s < 10 ? "0" + s : s);
            }, 1000);
        }

        function stopCall() {
            clearInterval(timerInt);
            document.getElementById('callUI').classList.add('hidden');
            if (sec >= 180) {
                let bonus = currentCallType === 'audio' ? 5.00 : 10.00;
                balance += bonus;
                document.getElementById('navBalance').innerText = balance.toFixed(2);
                document.getElementById('mainBalance').innerText = balance.toFixed(2);
                alert("‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ ‡¶¨‡ßç‡¶Ø‡¶æ‡¶≤‡ßá‡¶®‡ßç‡¶∏‡ßá ‡ß≥" + bonus + " ‡¶Ø‡ßã‡¶ó ‡¶π‡ßü‡ßá‡¶õ‡ßá!");
            } else {
                alert("‡¶ü‡¶æ‡¶ï‡¶æ ‡¶™‡ßá‡¶§‡ßá ‡ß© ‡¶Æ‡¶ø‡¶®‡¶ø‡¶ü ‡¶ï‡¶•‡¶æ ‡¶¨‡¶≤‡¶§‡ßá ‡¶π‡¶¨‡ßá‡•§");
            }
        }

        function handleSendMessage() {
            const input = document.getElementById('userInput');
            if (input.value.trim() !== "") {
                const bubble = document.createElement('div');
                bubble.className = "message-bubble bg-pink-600 text-white self-end shadow-md";
                bubble.innerText = input.value;
                document.getElementById('msgDisplay').appendChild(bubble);
                input.value = "";
                document.getElementById('msgDisplay').scrollTop = document.getElementById('msgDisplay').scrollHeight;
            }
        }

        function copyRefLink() {
            const copyText = document.getElementById('refLinkInput');
            copyText.select();
            document.execCommand("copy");
            alert("‡¶∞‡ßá‡¶´‡¶æ‡¶∞‡ßá‡¶≤ ‡¶≤‡¶ø‡¶ô‡ßç‡¶ï ‡¶ï‡¶™‡¶ø ‡¶π‡ßü‡ßá‡¶õ‡ßá!");
